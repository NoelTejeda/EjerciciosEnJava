    }                                         

    private void jButton14ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        num2=Integer.parseInt(jLabel1.getText());//guardará la segunda variable
        
        switch(signo){  //estaremos evaluando el signo que deseamos.
            case "+":
                jLabel1.setText(Integer.toString(num1+num2));
                break;
                
            case "-":
                jLabel1.setText(Integer.toString(num1-num2));
                break;
            case "/":
                jLabel1.setText(Integer.toString(num1/num2));
                break;
            case "*":
                jLabel1.setText(Integer.toString(num1*num2));
                break;
                
            
        }
    }                                         

